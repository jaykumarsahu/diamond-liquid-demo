<div class="custom-control custom-checkbox">
  <%= f.check_box filter_type, {multiple: true , class: "custom-control-input #{filter_type}", id: "input-#{filter_type}-#{value}", checked: params[filter_type].to_s.split(',').include?(value) }, value, '' %>


  <%= f.label "#{value.titleize}#{' gb' if filter_type != 'brand'}", class: "custom-control-label #{filter_type}", for: "input-#{filter_type}-#{value}" %>
</div>
